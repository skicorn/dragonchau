<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link href="~/Content/style.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Content/bootstrap/js/bootstrap.bundle.js"></script>
	<link href="~/Content/toastr.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
	<div class="d-flex text-white flex-column flex-shrink-0 p-3" style="width: 280px; background-color: #27ae61">
		<a href="/" class="d-flex justify-content-center align-items-center link-dark text-decoration-none">
			<img src="~/Content/dragonchau.svg" style="height: 100px;" />
		</a>
		<hr>
		<ul class="nav nav-pills flex-column mb-auto text-white">
			<li>
				<a href="/Home/Index" class="p-lg-3 nav-link @(Request.Path == "/Home/Index" ? "active" : "")" aria-current="page">
					<i class="fa fa-dashboard"></i>
					Trang chủ
				</a>
			</li>
			<li>
				<a href="/Bills" class="p-lg-3 nav-link @(Request.Path.StartsWith("/Bills") ? "active" : "")">
					<i class="fa-solid fa-cart-shopping"></i>
					Bán hàng
				</a>
			</li>
			<li>
				<a href="/Medicines" class="p-lg-3 nav-link @(Request.Path.StartsWith("/Medicines") ? "active" : "")">
					<i class="fa-solid fa-pills"></i>
					Danh mục thuốc
				</a>
			</li>
			<li>
				<a href="/Staffs" class="p-lg-3 nav-link @(Request.Path.StartsWith("/Staffs") ? "active" : "")">
					<i class="bi bi-person-lines-fill"></i>
					Nhân viên
				</a>
			</li>
			<li>
				<a href="/Customers" class="p-lg-3 nav-link @(Request.Path.StartsWith("/Customers") ? "active" : "")">
					<i class="bi bi-person-fill"></i>
					Khách hàng
				</a>
			</li>
			<li>
				<a href="/WareHouse" class="p-lg-3 nav-link @(Request.Path.StartsWith("/WareHouse") ? "active" : "")">
					<i class="bi bi-archive-fill"></i>
					Kho hàng
				</a>
			</li>
		</ul>
		<hr>
	</div>
	<!--topbar-->
	<div class="container-fluid p-0 overflow-y-scroll">
		<nav class="navbar navbar-expand navbar-light bg-white topbar mb-0 sticky-top shadow p-3 d-flex justify-content-between">
			<!-- Sidebar Toggle (Topbar) -->
			<button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
				<i class="fa fa-bars"></i>
			</button>
			<!-- Topbar Search -->
			<form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
				<div class="input-group">
					<input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
					<div class="input-group-append">
						<button class="btn btn-success" type="button">
							<i class="fas fa-search fa-sm"></i>
						</button>
					</div>
				</div>
			</form>
			<!-- Topbar Navbar -->
			<ul class="navbar-nav ml-auto">
				<!-- Nav Item - User Information -->
				<li class="nav-item dropdown no-arrow">
					<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<span class="mr-2 d-none d-lg-inline text-gray-600 small">@Session["Phone"]</span>
					</a>
					<!-- Dropdown - User Information -->
					<div class="dropdown-menu dropdown-menu-end shadow animated--grow-in" aria-labelledby="userDropdown">
						<a class="dropdown-item" href="#">
							<i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
							Profile
						</a>
						<div class="dropdown-divider"></div>
						<a class="dropdown-item" href="@Url.Action("Logout","Login")" data-toggle="modal" data-target="#logoutModal">
							<i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
							Logout
						</a>
					</div>
				</li>
			</ul>
		</nav>
		<div class="content p-3">
			@RenderBody()
		</div>
	</div>
	<script src="~/Scripts/jquery-3.4.1.min.js"></script>
	<script src="~/Scripts/toastr.js"></script>
	<script src="~/Scripts/toastr.min.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
