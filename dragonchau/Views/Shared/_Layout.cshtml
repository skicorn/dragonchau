<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	<link href="~/Content/style.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
	<div class="sidebar">
		<div class="logo">
			<img src="path/to/your/logo.png" alt="Logo">
		</div>
		<a href="#" class="menu-item" data-target="overview">
			<i class="fas fa-tachometer-alt"></i> Tổng quan <i class="fas fa-chevron-right arrow"></i>
		</a>
		<a href="#" class="menu-item" data-target="orders">
			<i class="fas fa-shopping-cart"></i> Bán hàng <i class="fas fa-chevron-right arrow"></i>
		</a>
		<a href="#" class="menu-item" data-target="products">
			<i class="fas fa-pills"></i>Thuốc<i class="fas fa-chevron-right arrow"></i>
		</a>
		<a href="#" class="menu-item" data-target="customers">
			<i class="fas fa-users"></i> Khách hàng <i class="fas fa-chevron-right arrow"></i>
		</a>
		<a href="#" class="menu-item" data-target="reports">
			<i class="fas fa-chart-line"></i> Báo cáo <i class="fas fa-chevron-right arrow"></i>
		</a>
		<a href="#" class="menu-item" data-target="warehouse">
			<i class="fas fa-warehouse"></i> Kho <i class="fas fa-chevron-right arrow"></i>
		</a>
	</div>

	<div class="container">
		@RenderBody()
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
